{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "semi": ["error", "always"],
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": ["error", "always"],
    "no-multiple-empty-lines": ["error", { "max": 1 }]
  }
}